<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.raatechnocrates.androidvoting.Login">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <EditText
                android:id="@+id/et_register_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textColorHint="#aaaaaa"
                android:paddingTop="25dp"
                android:paddingLeft="15dp"
                android:hint="Enter Name"
                android:singleLine="true"
                android:inputType="textCapWords"/>
            <EditText
                android:id="@+id/et_register_email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textColorHint="#aaaaaa"
                android:paddingTop="25dp"
                android:hint="Enter Email ID"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:inputType="textEmailAddress"/>

            <EditText
                android:id="@+id/et_register_mobile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textColorHint="#aaaaaa"
                android:paddingTop="25dp"
                android:paddingLeft="15dp"
                android:hint="Enter Mobile No"
                android:singleLine="true"
                android:inputType="number"/>

            <EditText
                android:id="@+id/et_register_address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textColorHint="#aaaaaa"
                android:paddingTop="25dp"
                android:paddingLeft="15dp"
                android:hint="Enter Address"
                android:singleLine="true"
                android:inputType="text"/>

            <EditText
                android:id="@+id/et_register_class"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textColorHint="#aaaaaa"
                android:paddingTop="25dp"
                android:paddingLeft="15dp"
                android:hint="Enter Class"
                android:singleLine="true"
                android:inputType="text"/>

            <EditText
                android:id="@+id/et_register_division"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textColorHint="#aaaaaa"
                android:paddingTop="25dp"
                android:paddingLeft="15dp"
                android:hint="Enter Division"
                android:singleLine="true"
                android:inputType="text"/>

            <EditText
                android:id="@+id/et_register_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textColorHint="#aaaaaa"
                android:hint="Enter Password"
                android:paddingTop="25dp"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:inputType="textPassword"/>

            <EditText
                android:id="@+id/et_register_repassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textColorHint="#aaaaaa"
                android:hint="Retype Password"
                android:paddingTop="25dp"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:inputType="textPassword"/>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:textColor="#000000"
                android:text="REGISTER"
                android:background="@drawable/mybutton"
                android:clickable="true" />

            <TextView
                android:id="@+id/tv_login_register"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Have a Account !! Login Now !!"
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:gravity="right"
                android:textColor="#333333"
                android:onClick="loginBack"
                android:clickable="true"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
