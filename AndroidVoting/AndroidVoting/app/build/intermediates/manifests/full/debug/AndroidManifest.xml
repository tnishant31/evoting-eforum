<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.raatechnocrates.androidvoting"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="Android Voting"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.android.androidvoting.MainActivity"
            android:label="Android Voting" >
        </activity>
        <activity
            android:name="com.example.android.androidvoting.SplashScreen"
            android:label="Android Voting" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.android.androidvoting.Login"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.example.android.androidvoting.Register"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="com.example.android.androidvoting.ChangePassword"
            android:label="Change Password" >
        </activity>
        <activity
            android:name="com.example.android.androidvoting.ViewCandidates"
            android:label="@string/title_activity_view_candidates" >
        </activity>
        <activity
            android:name="com.example.android.androidvoting.CastVote"
            android:label="@string/title_activity_cast_vote" >
        </activity>
        <activity
            android:name="com.example.android.androidvoting.ViewResults"
            android:label="@string/title_activity_view_results" >
        </activity>
        <activity
            android:name="com.example.android.androidvoting.ViewCandidatesDetails"
            android:label="@string/title_activity_view_candidates_details" >
        </activity>
        <activity
            android:name="com.example.android.androidvoting.CastVoteDetails"
            android:label="@string/title_activity_cast_vote_details" >
        </activity>
        <activity
            android:name="com.example.android.androidvoting.ViewResultDetails"
            android:label="@string/title_activity_view_result_details" >
        </activity>
        <activity
            android:name="com.example.android.androidvoting.Forum"
            android:label="@string/title_activity_forum" >
        </activity>
        <activity
            android:name="com.example.android.androidvoting.ForumDetails"
            android:label="@string/title_activity_forum_details" >
        </activity>
    </application>

</manifest>